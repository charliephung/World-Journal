<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body id="body">
    <div class="container">
        <hr>
        <h1>World Journal</h1>

        <a class="btn btn-primary" href="/map/new">Share your memory with us</a>
        <div class="header__right">
            <ul class="header__list">
                <% if(!user) { %>
                    <li class="header__item">
                        <a href="/login">
                            Log in
                        </a>
                    </li>
                    <li class="header__item">
                        <a href="/signup">Sign Up</a>
                    </li>
                    <% } else { %>
                        <li class="header__item">
                            <a href="#">
                                Greeting
                                <%= user.username %>
                            </a>
                        </li>
                        <li class="header__item">
                            <form action="/logout" method="POST">
                                <button>Logout</button>
                            </form>
                        </li>
                        <% } %>

            </ul>
        </div>
    </div>
    <hr>
    <section class="section-map">

        <div id="map">
        </div>
    </section>
    <div class="container">
        <div id="post">
            <% foundplaces.forEach(function(place) { %>
                <a href="<%= place._id %>">
                    <div>
                        <h1>
                            <%= place.name %>
                        </h1>
                        <img src="<%= place.image %>">
                    </div>
                    <div>
                        <%= place.description %>
                    </div>

                </a>
                <% }) %>
        </div>
    </div>

    <div class="popup" id="popup">
        <span class="popup__close" id="popup__close"></span>
        <div class="popup__div">
            <div class="popup__content" id="popup__content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="popup__post" id="popup__post">
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <div class="popup__comment">
                            asdasdsad
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <% include ../partials/footer %>

</body>

</htm